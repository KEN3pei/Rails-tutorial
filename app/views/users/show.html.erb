<% provide(:title, @user.name) %>

<% flash.each do |message_type, message| %>
  <%= tag.div message, class: "alert alert-#{message_type}" %>
<% end %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        ユーザ名
        <%= @user.name %>
        <p></p>
        メアド
        <%= @user.email %>
      </h1>
    </section>
  </aside>
</div>